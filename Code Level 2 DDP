#include<iostream>
using namespace std;

void konvert(long long totDetik){
    long long menit, detik;
    long long hari = totDetik / 86400;
    totDetik = totDetik % 86400;
    long long jam = totDetik / 3600;
    totDetik = totDetik % 3600;

    menit = totDetik / 60;
    detik = totDetik % 60;

    cout<<"Hasil konversi : "<<hari<<" hari : "<<jam<<" jam : "<<menit<<" menit : "<<detik<< " detik"<<endl;

}

int main(){
    
    long long detik;
    cout<<"Masukkan jumlah waktu (detik): ";
    cin>>detik;

    konvert(detik);
    return 0;
}
