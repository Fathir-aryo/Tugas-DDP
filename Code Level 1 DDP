#include<iostream>
using namespace std;

void log(long long second){
    
    long long jam = second / 3600;
    long long sisaDetik = second % 3600;
    int menit = sisaDetik / 60;
    int detikAkhir = sisaDetik % 60;

    cout<<endl;
    cout<<"Hasil konversi adalah : "<<endl;
    cout<<second<<" "<<"Detik = "<<" "<<jam<<" Jam"<<" "<<menit<<" Menit"<<" "<<detikAkhir<<" detik"<<endl;
}

int main(){
    long long detik;
    cout<<"Masukkan angka > 1 (dalam satuan detik): ";
    cin>>detik;

    log(detik);

    
    return 0;
}
